#!/bin/sh
histfile="$HOME/.local/share/cache/mpv-vids.txt"
mode="$(echo 'watch now\ndownload\nhistory' | rofi -dmenu -theme-str 'listview {lines: 3;}' -p 'watchvid')"

download() {
	echo $link >> $histfile && echo "dl-vid $link" >> ${HISTFILE:-/home/savar/.local/share/zsh/history} && notify-send "video" "trying to download" && ( yt-dlp --embed-chapters --embed-subs --write-auto-sub --format="bestvideo[height<=1080]+bestaudio" "$link" -o "/home/savar/vids/watch_later/%(title)s.%(ext)s" || notify-send "video" "failed to load video. recheck the url/internet." )
}

watch() {
	echo $link >> $histfile && echo "mpv $link" >> ${HISTFILE:-/home/savar/.local/share/zsh/history} && notify-send "video" "trying to play in mpv" && ( mpv "$link" || notify-send "video" "failed to load video. recheck the url/internet." )
}

if [ "$mode" = "watch now" ]; then
	link="$(rofi -dmenu -p "play in mpv" -theme-str 'window{width:40%;} listview{lines: 0;}')"
	[ "$link" ] && watch
elif [ "$mode" = "download" ]; then
	link="$(rofi -dmenu -p "download" -theme-str 'window{width:40%;} listview{lines: 0;}')"
	[ "$link" ] && download
elif [ "$mode" = "history" ]; then
	link="$(tac $histfile | rofi -dmenu -theme-str 'window{width: 40%;}' -p 'link')"
	[ "$link" ] && mode="$(echo 'watch now\ndownload' | rofi -dmenu -theme-str 'listview {lines: 2;}' -p 'watchvid')"
	if [ "$mode" = "watch now" ]; then
		watch
	elif [ "$mode" = "download" ]; then
		download
	fi
fi
