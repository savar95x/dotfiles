#!/bin/sh
# programs
alias e="nvim"
alias ls="ls --color=auto --group-directories-first"
alias ll="ls -lAh"
alias df="df -h"
alias sxiv="sxiv -ab"
alias todo="nvim $HOME/dox/notes/todo.txt"
yt_vids=${XDG_VIDEO_DIR:-~/vids}/yt
alias dl-vid="mkdir -p $yt_vids; yt-dlp --embed-chapters --embed-subs --write-auto-sub --format=\"bestvideo[height<=1080]+bestaudio\" \"$1\" -o \"$yt_vids/%(title)s.%(ext)s\""
alias bat="bat --color=always --theme=base16"
# for autogenerated subs, --write-auto-sub
alias picom-pijulius="$HOME/.local/src/picom-pijulius/build/src/picom -b --animations --animation-window-mass 0.5 --animation-for-open-window zoom --animation-stiffness 350 --config $HOME/.config/picom.conf.pijulius"
alias picom-jonaburg-fix="$HOME/.local/src/picom-jonaburg-fix/build/src/picom"
#alias picom-ftlabs="$HOME/.local/src/picom-ftlabs/build/src/picom --config $HOME/.config/picom.conf.ftlabs"
alias picom-ftlabs="picom-ftlabs --config $HOME/.config/picom-ftlabs.conf"
alias hotspot="sudo setsid -f $HOME/.local/bin/initSoftAP wlan0 enp0s20f0u1c2"
alias battery="sb_battery perc"
alias lf="lfrun"
alias scim="/usr/local/bin/sc-im"

# directories
alias sc="cd $HOME/.local/bin && ls"
alias scs="cd $HOME/.local/scripts && ls"
alias src="cd $HOME/.local/src && ls"
alias repos="cd $HOME/.local/repos && ls"
alias dotfiles="cd $HOME/.local/repos/savar95x/dotfiles && ls"

alias sdkwm="cd $HOME/.local/src/dkwm && ls"
alias sdwm="cd $HOME/.local/repos/savar95x/dwm && ls"
alias s2bwm="cd $HOME/.local/repos/savar95x/2bwm && ls"
alias sdwmblocks="cd $HOME/.local/repos/savar95x/dwmblocks && ls"
alias sst="cd $HOME/.local/repos/savar95x/st && ls"
alias shugo="cd $HOME/.local/repos/savar95x/savar95x.github.io-hugo && ls"
alias hugocp="cp -rf $HOME/.local/repos/savar95x/savar95x.github.io-hugo/public/* $HOME/.local/repos/savar95x/savar95x.github.io/ && ssite"
alias ssite="cd $HOME/.local/repos/savar95x/savar95x.github.io && ls"
alias giit="git commit -m '$1' && git push"

# actions
alias hss="hugo server --noHTTPCache -D"
alias beep="mpv --no-video $HOME/vids/assets/beep.mp4 &>/dev/null"
alias audio_server="setsid -f $HOME/.config/dwm/audio_server.sh"
alias startxdwm="XINITRC='$HOME/.config/x11/dwm' startx"
alias startxberry="XINITRC='$HOME/.config/x11/berry' startx"
alias startxawesome="XINITRC='$HOME/.config/x11/awesome' startx"
alias startxopenbox="XINITRC='$HOME/.config/x11/openbox' startx"
alias startx2bwm="XINITRC='$HOME/.config/x11/2bwm' startx"
alias startxxmonad="XINITRC='$HOME/.config/x11/xmonad' startx"
